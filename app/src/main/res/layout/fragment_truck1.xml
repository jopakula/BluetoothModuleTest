<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TruckFragment1"
    android:background="@color/BGLL"
    android:padding="16dp">

    <Button
        android:id="@+id/bConnect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/cardBG"
        android:textColor="@color/textColor"
        android:text="CONNECT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cardBG"
        android:text="BACK"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toTopOf="@+id/bConnect"
        app:layout_constraintEnd_toEndOf="@+id/bConnect"
        app:layout_constraintStart_toStartOf="@+id/bConnect" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/i1Wheel1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/wheel_view_top1_preview_rev_1"
            app:layout_constraintBottom_toBottomOf="@+id/i2beam1"
            app:layout_constraintEnd_toStartOf="@+id/i2beam1"
            app:layout_constraintTop_toTopOf="@+id/i2beam1" />

        <ImageView
            android:id="@+id/i2cabin"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/cabin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/i2beam1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/beam2"
            app:layout_constraintEnd_toEndOf="@+id/i2cabin"
            app:layout_constraintStart_toStartOf="@+id/i2cabin"
            app:layout_constraintTop_toTopOf="@+id/i2cabin" />

        <ImageView
            android:id="@+id/i2beam2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:src="@drawable/beam2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/i2cabin" />

        <ImageView
            android:id="@+id/i1Wheel2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/wheel_view_top1_preview_rev_1"
            app:layout_constraintBottom_toBottomOf="@+id/i2beam1"
            app:layout_constraintStart_toEndOf="@+id/i2beam1"
            app:layout_constraintTop_toTopOf="@+id/i2beam1" />

        <ImageView
            android:id="@+id/i1Wheel4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/wheel_view_top1_preview_rev_1"
            app:layout_constraintBottom_toBottomOf="@+id/i2beam2"
            app:layout_constraintStart_toEndOf="@+id/i2beam2"
            app:layout_constraintTop_toTopOf="@+id/i2beam2" />

        <ImageView
            android:id="@+id/i1Wheel3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/wheel_view_top1_preview_rev_1"
            app:layout_constraintBottom_toBottomOf="@+id/i2beam2"
            app:layout_constraintEnd_toStartOf="@+id/i2beam2"
            app:layout_constraintTop_toTopOf="@+id/i2beam2" />

        <TextView
            android:id="@+id/i1TV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp"
            app:layout_constraintBottom_toBottomOf="@+id/i1Wheel1"
            app:layout_constraintEnd_toEndOf="@+id/i1Wheel1"
            app:layout_constraintStart_toStartOf="@+id/i1Wheel1"
            app:layout_constraintTop_toTopOf="@+id/i1Wheel1" />

        <TextView
            android:id="@+id/i1TV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp"
            app:layout_constraintBottom_toBottomOf="@+id/i1Wheel2"
            app:layout_constraintEnd_toEndOf="@+id/i1Wheel2"
            app:layout_constraintStart_toEndOf="@+id/i2beam1"
            app:layout_constraintTop_toTopOf="@+id/i1Wheel2" />

        <TextView
            android:id="@+id/i1TV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp"
            app:layout_constraintBottom_toBottomOf="@+id/i1Wheel3"
            app:layout_constraintEnd_toStartOf="@+id/i2beam2"
            app:layout_constraintStart_toStartOf="@+id/i1Wheel3"
            app:layout_constraintTop_toTopOf="@+id/i1Wheel3" />

        <TextView
            android:id="@+id/i1TV4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp"
            app:layout_constraintBottom_toBottomOf="@+id/i1Wheel4"
            app:layout_constraintEnd_toEndOf="@+id/i1Wheel4"
            app:layout_constraintStart_toEndOf="@+id/i2beam2"
            app:layout_constraintTop_toTopOf="@+id/i1Wheel4" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="140dp"
            android:src="@drawable/goin"
            app:layout_constraintEnd_toEndOf="@+id/i2cabin"
            app:layout_constraintStart_toStartOf="@+id/i2cabin"
            app:layout_constraintTop_toBottomOf="@+id/i2cabin" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/trailer"
            app:layout_constraintEnd_toEndOf="@+id/i2cabin"
            app:layout_constraintStart_toStartOf="@+id/i2cabin"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:src="@drawable/beam2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:src="@drawable/beam2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/i1Wheel6"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/wheel_view_top1_preview_rev_1"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/i1Wheel8"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/wheel_view_top1_preview_rev_1"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5" />

        <ImageView
            android:id="@+id/i1Wheel7"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/wheel_view_top1_preview_rev_1"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5" />

        <ImageView
            android:id="@+id/i1Wheel5"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/wheel_view_top1_preview_rev_1"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <TextView
            android:id="@+id/i1TV5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp"
            app:layout_constraintBottom_toBottomOf="@+id/i1Wheel5"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/i1Wheel5"
            app:layout_constraintTop_toTopOf="@+id/i1Wheel5" />

        <TextView
            android:id="@+id/i1TV6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp"
            app:layout_constraintBottom_toBottomOf="@+id/i1Wheel6"
            app:layout_constraintEnd_toEndOf="@+id/i1Wheel6"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/i1Wheel6" />

        <TextView
            android:id="@+id/i1TV7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp"
            app:layout_constraintBottom_toBottomOf="@+id/i1Wheel7"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@+id/i1Wheel7"
            app:layout_constraintTop_toTopOf="@+id/i1Wheel7" />

        <TextView
            android:id="@+id/i1TV8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp"
            app:layout_constraintBottom_toBottomOf="@+id/i1Wheel8"
            app:layout_constraintEnd_toEndOf="@+id/i1Wheel8"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/i1Wheel8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>