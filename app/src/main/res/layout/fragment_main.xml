    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainFragment"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/tvMessage4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/overlayImage"
            android:layout_alignBottom="@+id/overlayImage"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="91dp"
            android:layout_marginBottom="-91dp"
            android:gravity="center"
            android:text="Temperature"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvMessage5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvMessage4"
            android:layout_alignBottom="@+id/tvMessage4"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="Temperature"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/mainImage"
            android:layout_width="400dp"
            android:layout_height="630dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="141dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/overlayImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignTop="@+id/overlayImage2"
            android:layout_alignBottom="@+id/overlayImage2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:src="@drawable/truck_view_top1" />

        <ImageView
            android:id="@+id/overlayImage2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="40dp"
            android:padding="20dp"
            android:layout_marginBottom="400dp"
            android:src="@drawable/truck_view_top_without" />

        <TextView
            android:id="@+id/tvMessage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/overlayImage"
            android:layout_alignBottom="@+id/overlayImage"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="Temperature"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvMessage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/overlayImage2"
            android:layout_alignBottom="@+id/overlayImage2"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="Temperature"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="140dp"
            android:text="TextView"
            android:visibility="invisible" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>